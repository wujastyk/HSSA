datecirca=true,
dateuncertain=true,
bibencoding=auto,
hyperref=auto,
isbn=true,
doi=true,
language=auto,
natbib=true,
texencoding=auto,
url=true,
urldate=short,
useprefix=true,
%refsection=section,
giveninits=false,
maxbibnames=10]{biblatex}
